{
  "name": "nuxt-ts-module",
  "version": "2.0.1",
  "description": "A tiny module to use Typescript within Nuxt 2.",
  "main": "index.js",
  "author": "Chanlito <chanlitohem@gmail.com>",
  "license": "MIT",
  "scripts": {
    "coverage": "npm test && cat ./coverage/lcov.info | coveralls",
    "test": "nyc mocha"
  },
  "keywords": [
    "nuxt",
    "typescript",
    "module"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/chanlito/nuxt-ts-module"
  },
  "dependencies": {
    "cache-loader": "^1.2.2",
    "fork-ts-checker-webpack-plugin": "^0.4.3",
    "thread-loader": "^1.1.5",
    "ts-loader": "^4.4.2",
    "typescript": "^2.9.2",
    "webpack-combine-loaders": "^2.0.3"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nuxt-edge": "^2.0.0-25523369.7c85202",
    "nyc": "^12.0.2"
  },
  "nyc": {
    "include": [
      "index.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary"
    ],
    "all": true
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  }
}
